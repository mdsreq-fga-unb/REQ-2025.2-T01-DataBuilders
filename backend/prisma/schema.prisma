generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String?  // opcional agora
  role      Role     @default(MONITOR)
  active    Boolean  @default(true)
  
  // Campos GitHub OAuth
  githubId  String?  @unique
  githubUsername String?
  avatarUrl String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  materials     Material[]     @relation("authorMaterials")
  repoFavorites RepoFavorite[]
  notices       Notice[]
}

enum MaterialType {
  slides
  video
  pdf
  codigo
  plano_de_ensino
  cronograma
  materal_complementar
  lista
  livro
}

enum MaterialStatus {
  Publicado
  Rascunho
}

model Material {
  id          String         @id @default(uuid())
  title       String
  description String
  type        MaterialType   
  contentUrl  String        
  topic       String?        
  period      String?        
  status      MaterialStatus @default(Publicado)
  version     String         @default("v1.0") 
  downloads   Int            @default(0)
  isFavorite  Boolean        @default(false)
  additionalInfo String?    
  authorId    String
  author      User      @relation("authorMaterials", fields: [authorId], references: [id])
  deleted     Boolean   @default(false) 
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  versions    Version[]
  @@map("materials")
}

model Version {
  id         String   @id @default(uuid())
  materialId String
  editedBy   String   
  diff       String   
  createdAt  DateTime @default(now())

  material   Material @relation(fields: [materialId], references: [id])

  @@map("versions")
}

model RepoFavorite {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  repoName  String
  owner     String
  url       String
  language  String?
  stars     Int?
  createdAt DateTime @default(now())
}

model Notice {
  id        String   @id @default(cuid())
  title     String
  body      String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deleted   Boolean  @default(false)
}

enum Role {
  PROFESSOR
  MONITOR
  ADMIN
}
